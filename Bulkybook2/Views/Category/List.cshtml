@{
}
@model IEnumerable<Category>

    <div class="w-100 d-flex justify-content-end">
        <div>
            <a class="btn btn-warning" asp-controller="Category" asp-action="Add">Create new Category</a>
        </div>
    </div>
<Table class="table">
    <thead class="">
        <tr>
            <th>Category Name</th>
            <th>Display order</th>
            <th></th>
        </tr>
     </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                    <a class="btn btn-danger">Delete</a>
                </td>
            </tr>
 
        }
           </tbody>
  
</Table>