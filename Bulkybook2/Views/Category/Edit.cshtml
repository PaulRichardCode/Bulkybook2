@model Bulkybook2.Models.Category

<Form method="post" asp-action="Edit">
    <h1>Edit Category</h1>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" class="form-control" asp-for="Name" />
    </div>
    <div class="form-group mt-3">
        <label for="DisplayOrder">Display Order</label>
        <select class="form-control" asp-for="DisplayOrder">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </div>
    <button class="btn btn-warning" type="submit">Update</button>
    <a class="btn btn-secondary" asp-area="" asp-controller="Category" asp-action="List">  Back to List</a>

</Form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}